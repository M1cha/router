[Unit]
Description=ddclient
After=network.target

[Container]
ContainerName=ddclient-%I
Image=localhost/ddclient:latest
Label=io.containers.autoupdate=local
Volume=/usr/local/share/ddclient/ddclient-%I.conf:/etc/ddclient/ddclient.conf:ro,idmap,z
Volume=/run/dhcp6c-addresses:/run/dhcp6c-addresses:ro,idmap,z
Exec=ddclient -foreground
Network=host
UserNS=auto

[Service]
Restart=always
RestartSec=10
ExecStartPre=mkdir -p /run/dhcp6c-addresses
